<p id="notice"><%= notice %></p>

<h1>Listing Skus</h1>

<table>
  <thead>
    <tr>
      <th>Productid</th>
      <th>Sku</th>
      <th>Variant1</th>
      <th>Variant2</th>
      <th>Variant3</th>
      <th>Ean</th>
      <th>Retailprice</th>
      <th>Saleprice</th>
      <th>Cost</th>
      <th>Inventory</th>
      <th>Classification</th>
      <th>Brand</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skus.each do |sku| %>
      <tr>
        <td><%= sku.productid %></td>
        <td><%= sku.sku %></td>
        <td><%= sku.variant1 %></td>
        <td><%= sku.variant2 %></td>
        <td><%= sku.variant3 %></td>
        <td><%= sku.ean %></td>
        <td><%= sku.retailprice %></td>
        <td><%= sku.saleprice %></td>
        <td><%= sku.cost %></td>
        <td><%= sku.inv %></td>
        <td><%= sku.classification %></td>
        <td><%= sku.brand %></td>
        <td><%= sku.weight %></td>
        <td><%= link_to 'Show', sku %></td>
        <td><%= link_to 'Edit', edit_sku_path(sku) %></td>
        <td><%= link_to 'Destroy', sku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

