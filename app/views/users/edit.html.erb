<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Perfil de Usuario</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">Home</a>
        </li>
        <li>
            <a>Users</a>
        </li>
        <li class="active">
            <strong>Edit</strong>
        </li>
    </ol>
</div>
<div class="col-lg-2">

</div>
</div>

<div class="wrapper wrapper-content">
<div class="row animated fadeInRight">
    <div class="col-lg-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
             <% if current_user.first_name == nil || current_user.last_name == nil %>
                <h5>Detalle del Usuario</h5>
            <%else%>
                <h5><%=current_user.first_name%> <%=current_user.last_name%></h5>
            <%end%>
            </div>
            <div>
                <div class="ibox-content no-padding border-left-right" style="text-align:center;">
                 
                      <span >
                   
                    <% if current_user.asset == nil %>

                         <img alt="image" style="width:200px; height:200px; margin-top:30px; background-color:white;" class="img-circle" src="<%= image_url 'user.png' %>"/>


                    <%else%>
                            <%= image_tag current_user.asset.url, class: "img-circle", :style => "width:200px; height:200px; margin-top:10px;" %>

                     <%end%>

                      </span>
                </div>
                <div class="ibox-content profile-content">

                     <% if current_user.first_name == nil %>

                        <p><i class="fa fa-map-marker"></i> | Debe asignar una direccion</p>
                        
                     <%else%>

                      <p><i class="fa fa-map-marker"></i> | <%= current_user.direccion%></p>
                    
                    <%end%>



                    <p><i class="fa fa-envelope"></i> | <%= current_user.email%></p>

                     <% if current_user.asset == nil %>

                     <p><i class="fa fa-picture-o"></i>
                     | Debe asignar una imagen</p>

                     <%else%>

                    <p><i class="fa fa-picture-o"></i>
                     | <%= current_user.asset_name%></p>

                     <%end%>



              






                  
                    <div class="user-button">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="/" class="btn btn-primary btn-sm btn-block">Ir al Panel</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



<!-- claves y informacion -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>



    <div class="col-lg-8">
        <div class="tabs-container">

            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab-1"> Informacion del Usuario</a></li>
               
                
            </ul>

            <div class="tab-content">

                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body">
                            <%= devise_error_messages! %>
                        <fieldset class="form-horizontal">
                            <div class="form-group"><label class="col-sm-2 control-label">Nombre:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :first_name, class: "form-control", placeholder: "Nombre", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Apellido:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :last_name, class: "form-control", placeholder: "Apellido", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Email:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :email, class: "form-control", placeholder: "Email", :required => true %>
                                

                                </div>
                                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></                                    div>
                                    <% end %>
                            </div>



                                




                            <div class="form-group"><label class="col-sm-2 control-label">Direccion:</label>
                                <div class="col-sm-10">
                                    <%= f.text_area :direccion, class: "form-control", placeholder: "Direccion", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Imagen de Perfil:</label>
                                <div class="col-sm-10">
                                    <%= f.file_field :asset%>
                                

                                </div>
                            </div>


                            <div class="form-group"><label class="col-sm-2 control-label">Nueva:</label>
                                <div class="col-sm-10">
                                     <%= f.password_field :password, class: "form-control", placeholder: "Contraseña nueva"  %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Confirmacion:</label>
                                <div class="col-sm-10">
                                     <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmacion de Contraseña"  %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Actual:</label>
                                <div class="col-sm-10">
                                      <%= f.password_field :current_password, class: "form-control", placeholder: "Contraseña Actual" %>
                                

                                </div>
                            </div>


                        </fieldset>
                     <%= f.submit 'Actualizar', :class => 'btn btn-success' %>
                    </div>

                </div>

            </div>

        </div>
       

<br>


<hr>
</div>
<br>

<% end %>

<!-- claves y informacion -->


</div>
</div>





<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $("span.pie").peity("pie", {
        fill: ['#1ab394', '#d7d7d7', '#ffffff']
    })

    $(".line").peity("line", {
        fill: '#1ab394',
        stroke: '#169c81',
    })

    $(".bar").peity("bar", {
        fill: ["#1ab394", "#d7d7d7"]
    })


});

</script>

<% end %>

