<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Perfil de Usuario</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/users">Home</a>
        </li>
        <li>
            <a>Members</a>
        </li>
        <li class="active">
            <strong>Edit</strong>
        </li>
    </ol>
</div>
<div class="col-lg-2">

</div>
</div>

<div class="wrapper wrapper-content">
<div class="row animated fadeInRight">
    <div class="col-lg-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
             <% if @user.first_name == nil %>
                <h5>Detalle del Miembro</h5>
            <%else%>
                <h5><%= @user.first_name %> <%= @user.last_name %></h5>
            <%end%>
            </div>
            <div>
                <div class="ibox-content no-padding border-left-right" style="text-align:center;">
                 
                      <span >
                   
                    <% if @user.asset_uid == nil %>

                         <img alt="image" style="width:200px; height:200px; margin-top:30px; background-color:white;" class="img-circle" src="<%= image_url 'user.png' %>"/>


                    <%else%>

                            <img src="<%= @user.asset.url %>" alt="" style="width:200px; height:200px; margin-top:10px;">

                     <%end%>

                      </span>
                </div>
                <div class="ibox-content profile-content">

                  



                     <% if @user.email == nil %>

                        <p><i class="fa fa-envelope"></i> | Debe asignar el email</p>
                        
                     <%else%>

                      <p><i class="fa fa-envelope"></i> | <%= @user.email%></p>
                    
                    <%end%>


                  
                    <div class="user-button">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="/users" class="btn btn-primary btn-sm btn-block">Ir al Panel de Miembros</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



<!-- claves y informacion -->




    <div class="col-lg-8">
        <div class="tabs-container">

            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab-1"> Informacion del Miembro</a></li>
               
                
            </ul>

            <div class="tab-content">

                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body">

                        <fieldset class="form-horizontal">
                            <div class="form-group"><label class="col-sm-2 control-label">Nombre:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :first_name, class: "form-control", placeholder: "Nombre", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Apellido:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :last_name, class: "form-control", placeholder: "Apellido", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Email:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :email, class: "form-control", placeholder: "Email", :required => true %>
                                

                                </div>
                                      
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Password:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :password, class: "form-control", placeholder: "Password", :required => true %>
                                

                                </div>
                                      
                            </div>



                            <div class="form-group"><label class="col-sm-2 control-label">Imagen de Perfil:</label>
                                <div class="col-sm-10">
                                    <%= f.file_field :asset%>
                                

                                </div>
                            </div>


                         


                        </fieldset>
                     <%= f.submit 'Actualizar', :class => 'btn btn-success' %>
                    </div>

                </div>

            </div>

        </div>
       

<br>


<hr>
</div>
<br>



<!-- claves y informacion -->


</div>
</div>







<% end %>


