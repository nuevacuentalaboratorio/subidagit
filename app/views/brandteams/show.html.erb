<%= form_for(@brandteam) do |f| %>
  <% if @brandteam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brandteam.errors.count, "error") %> prohibited this brandteam from being saved:</h2>

      <ul>
      <% @brandteam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Perfil de Usuario</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/brandteams">Home</a>
        </li>
        <li>
            <a>Members</a>
        </li>
        <li class="active">
            <strong>Show View</strong>
        </li>
    </ol>
</div>
<div class="col-lg-2">

</div>
</div>

<div class="wrapper wrapper-content">
<div class="row animated fadeInRight">
    <div class="col-lg-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
             <% if @brandteam.nombre == nil %>
                <h5>Detalle del Miembro</h5>
            <%else%>
                <h5><%= @brandteam.nombre %> </h5>
            <%end%>
            </div>
            <div>
                <div class="ibox-content no-padding border-left-right" style="text-align:center;">
                 
                      <span >
                   
                    <% if @brandteam.foto_uid == nil %>

                         <img alt="image" style="width:200px; height:200px; margin-top:30px; background-color:white;" class="img-circle" src="<%= image_url 'user.png' %>"/>


                    <%else%>

                            <img src="<%= @brandteam.foto.url %>" alt="" style="width:200px; height:200px; margin-top:10px;">

                     <%end%>

                      </span>
                </div>
                <div class="ibox-content profile-content">

                     <% if @brandteam.empresa == nil %>

                        <p><i class="fa fa-map-marker"></i> | Debe asignar la empresa</p>
                        
                     <%else%>

                      <p><i class="fa fa-map-marker"></i> | <%= @brandteam.empresa%></p>
                    
                    <%end%>

                     <% if @brandteam.telefono == nil %>

                        <p><i class="fa fa-map-marker"></i> | Debe asignar el telefono</p>
                        
                     <%else%>

                      <p><i class="fa fa-map-marker"></i> | <%= @brandteam.telefono%></p>
                    
                    <%end%>

                     <% if @brandteam.email == nil %>

                        <p><i class="fa fa-envelope"></i> | Debe asignar el email</p>
                        
                     <%else%>

                      <p><i class="fa fa-envelope"></i> | <%= @brandteam.email%></p>
                    
                    <%end%>


                  
                    <div class="user-button">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="/brandteams" class="btn btn-primary btn-sm btn-block">Ir al Panel de Miembros</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



<!-- claves y informacion -->




    <div class="col-lg-8">
        <div class="tabs-container">

            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab-1"> Informacion del Miembro</a></li>
               
                
            </ul>

            <div class="tab-content">

                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body">

                        <fieldset class="form-horizontal">
                            <div class="form-group"><label class="col-sm-2 control-label">Nombre:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :nombre, class: "form-control", placeholder: "Nombre", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Empresa:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :empresa, class: "form-control", placeholder: "Email", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Email:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :email, class: "form-control", placeholder: "Email", :required => true %>
                                

                                </div>
                                      
                            </div>


                            <div class="form-group"><label class="col-sm-2 control-label">Cargo:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :cargo, class: "form-control", placeholder: "Cargo", :required => true %>
                                

                                </div>
                                      
                            </div>



                                




                            <div class="form-group"><label class="col-sm-2 control-label">Telefono:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :telefono, class: "form-control", placeholder: "Telefono", :required => true %>
                                

                                </div>
                            </div>

                            <div class="form-group"><label class="col-sm-2 control-label">Imagen de Perfil:</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :foto_name, class: "form-control", placeholder: "Telefono", :required => true %>
                                

                                </div>
                            </div>


                         


                        </fieldset>
                        <a href="<%= @brandteam.id %>/edit" class="btn btn-success">Editar</a>
                    </div>

                </div>

            </div>

        </div>
       

<br>


<hr>
</div>
<br>



<!-- claves y informacion -->


</div>
</div>







<% end %>


