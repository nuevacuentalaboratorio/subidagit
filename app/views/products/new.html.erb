                                    <td>
                                         <%= f.file_field :asset2, class: "file2", :required => true%>
                                    </td>
                                </tr>

                                <tr>
                                    <td style="text-align:center;">
                                          
                                        <p>

                                            <div  class="upload-preview3">
                                                <img class="image-product" />
                                            </div>

                                        </p>
                                         
                                    </td>


                                    <td>
                                         <%= f.file_field :asset3, class: "file3", :required => true%>
                                    </td>
                                </tr>
                            
                                </tbody>
                            </table>
                        </div>


                    </div>

                </div>
