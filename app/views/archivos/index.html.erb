                </div>
            </div>
        </div>
    </div>

<% @documentos.each do |documento| %>

<div class="col-lg-4 col-sm-12 col-xs-12">
    
        <div class="file">
            <span class="corner"></span>


            <div class="icon">


                 <% if documento.uploaded_file_content_type == 'application/pdf' %>
                 <a id="verpdf-<%=documento.id%>-icono" href="#" onclick="verpdf();"><i  class="fa fa-file-pdf-o" aria-hidden="true"></i></a>
                 <% elsif documento.uploaded_file_content_type == 'image/jpeg' or documento.uploaded_file_content_type == 'image/jpg' or documento.uploaded_file_content_type == 'image/png' or documento.uploaded_file_content_type == 'image/gif' %>
