                <% elsif documento.uploaded_file_content_type == 'application/zip' %>

                <i class="fa fa-file-archive-o" aria-hidden="true"></i>

                <% elsif documento.uploaded_file_content_type == 'text/plain' %>

               <i class="fa fa-file-text-o" aria-hidden="true"></i>

                <% elsif documento.uploaded_file_content_type == 'application/msword' %>

              <i class="fa fa-file-word-o" aria-hidden="true"></i>

              <% elsif documento.uploaded_file_content_type == 'application/vnd.ms-excel' or documento.uploaded_file_content_type == 'text/csv' %>

              <i class="fa fa-file-excel-o" aria-hidden="true"></i>



                <%end%>









            </div>
            <div class="file-name">
            
            <div class="col-lg-4">
                <%= link_to 'Descargar' , documento , class: 'btn btn-xs btn-outline btn-success'%>
            </div>
            <div class="col-lg-4">
                <%= link_to 'Editar', edit_documento_path(documento), class: 'btn btn-xs btn-outline btn-primary', :style => "width:70px;" %>
            </div>
            <div class="col-lg-4">
                <%= link_to 'Eliminar', documento, method: :delete, data: { confirm: 'Esta seguro de eliminar el documento?' }, class: 'btn btn-xs btn-outline btn-danger' %>

            </div>
           
          
            <div class="col-lg-12" style="margin-top:5px; padding-bottom:5px;"><strong><%= documento.uploaded_file_file_name%></strong></div>
             <br> <br>
                
           
            </div>

        </div>
   
 
</div>



<% end %>

