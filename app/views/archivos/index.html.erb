<div id="visorpdf" class="col-lg-12">
    
<iframe id="iframepdf" src="" style="border: 0" width="100%" height="1000" frameborder="0" scrolling="no"></iframe>

</div>
<script>
    $("#radiolista").prop("checked", true);
    $("#radioicono").prop("checked", false);
    $("#documentosgrandes").hide();
    $("#visorpdf").hide();

    $("#radiolista").change(function () {
        $("#documentosgrandes").hide();
        $("#documentosenlista").show();
        $("#visorpdf").hide();
    });

    $("#radioicono").change(function () {
        $("#documentosgrandes").show();
        $("#documentosenlista").hide();
        $("#visorpdf").hide();
    });

    function verpdf(){


        $("#documentosgrandes").hide();
        $("#documentosenlista").hide();
        $("#visorpdf").show();
        $("#radiolista").prop("checked", false);
        $("#radioicono").prop("checked", false);
    }

</script>