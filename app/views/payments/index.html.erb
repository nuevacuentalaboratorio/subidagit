

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Payments</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
        </li>
        <li class="active">
            Payments
        </li>


        
    </ol>
</div>
        </div>
<div class="wrapper wrapper-content">
<div class="row">

<div id="archivosenlista" class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                   
                    <h2>Payments</h2>

                    
                    <div class="clients-list">


                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane active">
                                <div class="full-height-scroll">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <tbody>

                                    <thead>
                                      <tr>
                                       <th>Annual Payment $</th>
                                       <th>Last Month Payment $ </th>
                                       <th>Crecimiento % (MoM)</th>
                                        
                                      
                                        <th colspan="3"></th>
                                      </tr>
                                    </thead>                                  

                                  <% @payments.each do |p| %>
                                     <tr style="font-size:25px;">
                                         <td><i style="color:green;" class="fa fa-money" aria-hidden="true"></i>  
                                            <%= p.anual %> $</td>
                                          <td ><i style="color:green;"  class="fa fa-money" aria-hidden="true"></i>
                                          <%= p.ultimomes %> $</td>
                                          <td><%= p.porcentaje %> <span><strong>%</strong></span>
</td>

                                          

                                          
                                         
                                          <td><%= link_to 'Ver', p, class: "btn btn-xs btn-outline btn-primary" %></td>
                                          <td><%= link_to 'Editar', edit_payment_path(p),  class: "btn btn-xs btn-outline btn-success" %></td>
                                          <td><%= link_to 'Eliminar', p, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-xs btn-outline btn-danger" %></td>

                                           
                                          

                                    </tr>


                                  <% end %>

                                            
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>
</div>

























<div class="col-lg-6" >
<%= form_tag import_payments_path, multipart: true do %>
  <%= file_field_tag :file, class: "form-control", :style => "padding-bottom:40px; margin-bottom:10px;"  %>
  <%= submit_tag "Import", class: "btn btn-primary col-lg-12", :style => "", :onclick => 'validarFile();'  %>
<% end %>

</div>


  <br><br><br><br><br><br>  <br><br>


<script>
    
    var file = document.getElementById('file');



    function validarFile(){

        if(file.value == ""){
            alert("Debe seleccionar un archivo a importar");
            
        }


    }

</script>
