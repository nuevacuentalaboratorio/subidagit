<h1>Editing variations</h1>

<% form_for([@product, variation]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', product_variation_path(@product, @variation) %> |
<%= link_to 'Back', product_variations_path(@product) %>
